@{
    string language = ViewContext.RouteData.Values["language"].ToString();
}

@switch (language) {
    case "fr-ca":
        Layout = "~/Views/Shared/_MasterFR.cshtml";
        break;
    case "en-ca":
	    Layout = "~/Views/Shared/_MasterEN.cshtml";
        break;
}

<main role="main" property="mainContentOfPage" class="container">

@switch (language) {
    case "fr-ca":
        @:<h1 property="name" id="wb-cont" class="mrgn-tp-md">Indicateurs de l’activité physique, du comportement sédentaire et du sommeil (APCSS)</h1>
        break;
    case "en-ca":
	    @:<h1 property="name" id="wb-cont" class="mrgn-tp-md">Physical Activity, Sedentary Behaviour and Sleep (PASS) Indicators</h1>
        break;
}

    <div class="row">
		<div class="col-md-12">
		<div class="btn-group btn-group-lg btn-group-justified" style="padding:20px 0px;">
		@if (language == "fr-ca")
                {
			<a asp-action="index" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "index" ? "active btn btn-primary" : "btn btn-default")" role="button">Statistiques rapides</a>
			<a asp-action="data-tool" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "data-tool" ? "active btn btn-primary" : "btn btn-default")" role="button">Outil de données</a>
			<a asp-action="publications" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "publications" ? "active btn btn-primary" : "btn btn-default")" role="button">Publications</a>
                }
                else
                {
			<a asp-action="index" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "index" ? "active btn btn-primary" : "btn btn-default")" role="button">Quick Stats</a>
			<a asp-action="data-tool" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "data-tool" ? "active btn btn-primary" : "btn btn-default")" role="button">Data Tool</a>
			<a asp-action="publications" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "publications" ? "active btn btn-primary" : "btn btn-default")" role="button">Publications</a>
                }
		</div>
		</div>
	
        <div class="col-sm-12">
                @RenderBody()
        </div>

        <div class="col-sm-12">
            <div class="row pagedetails">
                <div class="col-sm-6 col-lg-4 mrgn-tp-sm">
                    @switch (language) {
                        case "fr-ca":
                            @:<a href="https://www.canada.ca/fr/signaler-probleme" class="btn btn-default btn-block">Signaler un problème ou une erreur sur cette page</a>
                            break;
                        case "en-ca":
                            @:<a href="https://www.canada.ca/en/report-problem" class="btn btn-default btn-block">Report a problem or mistake on this page</a>
                            break;
                    }
                </div>
                <div class="col-sm-3 mrgn-tp-sm pull-right">
                    <div class="wb-share" data-wb-share='{"pnlId": "pnl6", "lnkClass": "btn btn-default btn-block"}'></div>
                </div>
                <div class="datemod col-xs-12 mrgn-tp-lg">
                    <dl id="wb-dtmd">
                        @switch (language) {
                        case "fr-ca":
                            @:<dt>Date de modification&nbsp;: </dt>  
                            break;
                        case "en-ca":
                            @:<dt>Date modified: </dt>   
                            break;
                    }
                    <dd><time property="dateModified">2020-02-01</time></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</main>