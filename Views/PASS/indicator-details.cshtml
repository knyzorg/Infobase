@model Infobase.Models.PASS.Measure
@{
    Layout = "_Layout.cshtml";
    string language = ViewContext.RouteData.Values["language"].ToString();
}

<h2>Measure Description</h2>

<table class="table table-striped table-hover table-condensed table-bordered">
<tbody><tr><td><strong>Measure</strong></td>
<td>@Model.MeasureNameDataTool(language)</td></tr>
<tr><td><strong>Definition</strong></td>
    <td>@Model.MeasureDefinition(language)</td></tr>
<tr><td><strong>Data Source</strong></td>
    <td>@Model.MeasureSourceLong(language)</td></tr>
<tr><td><strong>Population</strong></td>
    <td>@Model.MeasurePopulationGroup(language)</td></tr>
<tr><td><strong>Estimate Calculation</strong></td><td>
    @Model.MeasureMethod(language)
</td></tr>
<tr><td><strong>Additional Remarks</strong></td><td>
    @Model.MeasureAdditionalRemarks(language)
</td></tr>
</tbody></table>
@if (Model.Included) {
	switch (language) {
        case "en-ca":
		    @:<a class="btn btn-success" href="https://health-infobase.canada.ca/pass/data-tool/?index=@Model.Index">Open in Data Tool</a>
            break;
        case "fr-ca":
		    @:<a class="btn btn-success" href="https://sante-infobase.canada.ca/apcss/outil-de-donnees/?index=@Model.Index">Ouvrir dans l'outil de donnees</a>
            break;
	}
}