@model Infobase.Models.PASS.Measure
@{
    Layout = "_Layout.cshtml";
    string language = ViewContext.RouteData.Values["language"].ToString();
}

<h2>Measure Description</h2>

<table class="table table-striped table-hover table-condensed table-bordered">
<tbody><tr><td><strong>Measure</strong></td>
<td>@Model.MeasureName.Get((language, null))</td></tr>
<tr><td><strong>Definition</strong></td>
    <td>@Model.MeasureDefinition.Get((language, null))</td></tr>
<tr><td><strong>Data Source</strong></td>
    <td>@Model.MeasureSource.Get((language, "Measure"))</td></tr>
<tr><td><strong>Population</strong></td>
    <td>@Model.MeasurePopulation.Get((language, null))</td></tr>
<tr><td><strong>Estimate Calculation</strong></td><td>
    @Model.MeasureMethod.Get((language, null))
</td></tr>
<tr><td><strong>Additional Remarks</strong></td><td>
    @Model.MeasureAdditionalRemarks.Get((language, null))
</td></tr>
</tbody></table>
@if (Model.Included) {
    <a asp-action="Datatool" asp-route-measureid="@Model.MeasureId" class="btn btn-success">Open in Data Tool</a>
}