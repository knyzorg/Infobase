@model Infobase.Models.PASS.Measure
@{
    Layout = "_Layout.cshtml";
    string language = ViewContext.RouteData.Values["language"].ToString();
}

<h2>Measure Description</h2>

<table class="table table-striped table-hover table-condensed table-bordered">
<tbody><tr><td><strong>Measure</strong></td>
<td>@Model.MeasureNameDataToolEn</td></tr>
<tr><td><strong>Definition</strong></td>
    <td>@Model.MeasureDefinitionEn</td></tr>
<tr><td><strong>Data Source</strong></td>
    <td>@Model.MeasureSourceLongEn</td></tr>
<tr><td><strong>Population</strong></td>
    <td>@Model.MeasurePopulationGroupEn</td></tr>
<tr><td><strong>Estimate Calculation</strong></td><td>
    @Model.MeasureMethodEn
</td></tr>
<tr><td><strong>Additional Remarks</strong></td><td>
    @Model.MeasureAdditionalRemarksEn
</td></tr>
</tbody></table>
@if (Model.Included) {
	@if (language == "en-ca") {
		<a class="btn btn-success" href="https://health-infobase.canada.ca/pass/data-tool/?measureid=@Model.MeasureId">Open in Data Tool</a>
	}else{
		<a class="btn btn-success" href="https://sante-infobase.canada.ca/apcss/outils-de-donnees/?measureid=@Model.MeasureId">Ouvrir dans l'outil de donnees</a>
	}
}