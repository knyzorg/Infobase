@{
    string language = ViewContext.RouteData.Values["language"].ToString();
	}
	
@{

@if (language == "fr-ca") {
    Layout = "~/Views/Shared/_MasterFR.cshtml";
	}else{
	Layout = "~/Views/Shared/_MasterEN.cshtml";
	}
	
}

<main role="main" property="mainContentOfPage" class="container">

    <h1 property="name" id="wb-cont" class="mrgn-tp-md">	                @if (language == "fr-ca")
                {
                    <text>Indicateurs de l’activité physique, du comportement sédentaire et du sommeil</text>
                }
                else
                {
                    <text>Physical Activity, Sedentary Behaviour and Sleep (PASS) Indicators</text>
                }	
	</h1>

    <div class="row">
		<div class="col-md-12">
		<div class="btn-group btn-group-lg btn-group-justified" style="padding:20px 0px;">
		@if (language == "fr-ca")
                {
			<a href="https://sante-infobase.canada.ca/apcss/" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "index" ? "active btn btn-primary" : "btn btn-default")" role="button">Statistiques rapides</a>
			<a href="https://sante-infobase.canada.ca/apcss/outils-de-donnees/" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "datatool" ? "active btn btn-primary" : "btn btn-default")" role="button">Outil de données</a>
			<a href="#" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "publication" ? "active btn btn-primary" : "btn btn-default")" role="button">Publications</a>
                }
                else
                {
			<a href="https://health-infobase.canada.ca/pass/" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "index" ? "active btn btn-primary" : "btn btn-default")" role="button">Quick Stats</a>
			<a href="https://health-infobase.canada.ca/pass/data-tool/" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "datatool" ? "active btn btn-primary" : "btn btn-default")" role="button">Data Tool</a>
			<a href="#" class="@(ViewContext.RouteData.Values["action"].ToString().ToLower() == "publication" ? "active btn btn-primary" : "btn btn-default")" role="button">Publications</a>
                }
		</div>
		</div>
	
        <div class="col-sm-12">
                @RenderBody()
        </div>

        <div class="clearfix"></div>

        <div class="row pagedetails">
            <div class="col-sm-6 col-lg-4 mrgn-tp-sm">
				@if(language == "fr-ca"){
				    <a href="https://www.canada.ca/fr/signaler-probleme" class="btn btn-default btn-block">Signaler un problème ou une erreur sur cette page</a>
				}else{
					<a href="https://www.canada.ca/en/report-problem" class="btn btn-default btn-block">Report a problem or mistake on this page</a>
				}
            </div>
            <div class="col-sm-3 mrgn-tp-sm pull-right">
                <div class="wb-share" data-wb-share='{"pnlId": "pnl6", "lnkClass": "btn btn-default btn-block"}'></div>
            </div>
            <div class="datemod col-xs-12 mrgn-tp-lg">
                <dl id="wb-dtmd">
				@if(language == "fr-ca"){
					<dt>Date de modification&nbsp;: </dt>  
				}else{
                    <dt>Date modified: </dt>                    				
				}
				<dd><time property="dateModified">2017-08-09</time></dd>
                </dl>
            </div>
        </div>
    </div>
</main>